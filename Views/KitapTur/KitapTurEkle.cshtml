@model MvcKutuphane.Models.Model.KitapTuru
@{
    ViewBag.Title = "KitapTurEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("KitapTurEkle", "KitapTur", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group" style="margin-top:70px">
        <label>Kitap Türü</label>
        <input type="text" name="TurAd" placeholder="Kitap türü giriniz..." required="" class="form-control">
        <br />
        <label>KullanıcıID</label>
        <input type="text" name="KullaniciId" value="@Session["kullaniciId"]" readonly class="form-control">
        <br />
        <br />
        <button type="submit" class="btn btn-success">Kaydet</button>
        <a class="btn btn-danger" href="/Yazar/Index">İptal</a>
    </div>
}


