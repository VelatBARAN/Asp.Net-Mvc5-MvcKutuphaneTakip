@model MvcKutuphane.Models.Model.KitapTuru
@{
    ViewBag.Title = "KitapTurGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("KitapTurGuncelle", "KitapTur", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group" style="margin-top:70px">
        <input type="text" name="TurAd" value="@Model.TurAd" required="" class="form-control">
        <br />
        <label>KullanıcıID</label>
        <input type="text" name="KullaniciId" value="@Session["kullaniciId"]" readonly class="form-control">
        <br />
        <br />
        <button type="submit" class="btn btn-success">Güncelle</button>
        <a class="btn btn-danger" href="/Yazar/Index">İptal</a>
    </div>
}

