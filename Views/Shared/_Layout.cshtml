@{
    if (Session["kullaniciId"] == null)
    {
        Response.Redirect("/Home/Login");
    }
}

<!DOCTYPE html>
<head>
    <title>@ViewBag.Title | @ViewBag.KimlikInfo.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="@ViewBag.KimlikInfo.Keywords" />
    <meta name="description" content="@ViewBag.KimlikInfo.Description" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- bootstrap-css -->
    <link rel="stylesheet" href="~/Content/web/css/bootstrap.min.css">
    <!-- //bootstrap-css -->
    <!-- Custom CSS -->
    <link href="~/Content/web/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/Content/web/css/style-responsive.css" rel="stylesheet" />
    <!-- font CSS -->
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <!-- font-awesome icons -->
    <link rel="stylesheet" href="~/Content/web/css/font.css" type="text/css" />
    <link href="~/Content/web/css/font-awesome.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/web/css/morris.css" type="text/css" />
    <!-- calendar -->
    <link rel="stylesheet" href="~/Content/web/css/monthly.css">
    <!-- //calendar -->
    <!-- //font-awesome icons -->
    <script src="~/Content/web/js/jquery2.0.3.min.js"></script>
    <script src="~/Content/web/js/raphael-min.js"></script>
    <script src="~/Content/web/js/morris.js"></script>
</head>
<body>
    <section id="container">
        <!--header start-->
        <header class="header fixed-top clearfix">
            <!--logo start-->
            <div class="brand">
                <a href="/Home/Index" class="logo" style="font-size:20px">
                    @ViewBag.KimlikInfo.Unvan
                </a>
                <div class="sidebar-toggle-box">
                    <div class="fa fa-bars"></div>
                </div>
            </div>
            <!--logo end-->
            <div class="top-nav clearfix">
                <!--search & user info start-->           
                <ul class="nav pull-right top-menu">
                    <!-- user login dropdown start-->

                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <img alt="" src="@Session["resim"]" width="40" height="40">                          
                            <span class="username">@Session["ad"]&nbsp @Session["soyad"]</span>

                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu extended logout">
                            <li><span>@Session["yetki"]</span></li>
                            <li><a href="/Kullanici/KullaniciSifreDegistir/@Session["kullaniciId"]"><i class=" fa fa-key"></i>Şifre Değiştir</a></li>
                            <li><a href="/Home/LogOut"><i class="fa fa-sign-out"></i> Çıkış</a></li>
                        </ul>
                    </li>
                    <!-- user login dropdown end -->
                </ul>
                <!--search & user info end-->
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse">
                <!-- sidebar menu start-->
                <div class="leftside-navigation">
                    <ul class="sidebar-menu" id="nav-accordion" style="font-size:16px">
                        <li>
                            <a class="active" href="/Home/Index">
                                <i class="fa fa-dashboard"></i>
                                <span style="font-size:14px">Dashboard</span>
                            </a>
                        </li>
                        <li>
                            <a href="/Kitap/Index">
                                <i class="fa fa-book"></i>
                                <span style="font-size:14px">Kitaplar</span>
                            </a>
                        </li>
                        <li>
                            <a href="/Uye/Index">
                                <i class="fa fa-user-plus"></i>
                                <span style="font-size:14px">Üyeler </span>
                            </a>
                        </li>
                        <li>
                            <a href="/Odunc/KitapOduncVer">
                                <i class="glyphicon-piggy-bank"></i>
                                <span style="font-size:14px">Kitap Ödünç Ver</span>
                            </a>
                        </li>
                        <li>
                            <a href="/Odunc/Index">
                                <i class="fa fa-compress"></i>
                                <span style="font-size:14px">İşlemler</span>
                            </a>
                        </li>
                        <li>
                            <a href="/Odunc/IadesiGecikenTumKitaplar">
                                <i class="fa fa-caret-square-o-left"></i>
                                <span style="font-size:14px">İadesi Geciken Kitaplar</span>
                            </a>
                        </li>
                        <li>
                            <a href="/Odunc/IadesiYaklasanTumKitaplar">
                                <i class="fa fa-clock-o"></i>
                                <span style="font-size:14px">İadesi Yaklaşan Kitaplar</span>
                            </a>
                        </li>
                        <li>
                            <a href="/Arsiv/Index">
                                <i class="fa fa-archive"></i>
                                <span style="font-size:14px">Genel Arşiv</span>
                            </a>
                        </li>
                        <li>
                            <a href="/KitapTur/Index">
                                <i class="fa fa-bars"></i>
                                <span style="font-size:14px">Kitap Türler</span>
                            </a>
                        </li>
                        <li>
                            <a href="/Yazar/Index">
                                <i class="fa fa-sticky-note"></i>
                                <span style="font-size:14px">Yazarlar</span>
                            </a>
                        </li>
                        @if (Session["yetki"].ToString() == "Administrator")
                        {
                            <li>
                                <a href="/Kimlik/Index">
                                    <i class="fa fa-key"></i>
                                    <span style="font-size:14px">Sistem Kimlik Ayarları</span>
                                </a>
                            </li>
                            <li>
                                <a href="/Kullanici/Index">
                                    <i class="fa fa-users"></i>
                                    <span style="font-size:14px">Yöneticiler</span>
                                </a>
                            </li>
                        }

                    </ul>
                </div>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                <!-- //market-->
                @RenderBody()
            </section>
            <!-- footer -->
            <div class="footer">
                <div class="wthree-copyright">
                    <p>© 2020 Kütüphane Takip Sistemi. Tüm Hakları Saklıdır. | <a href="http://www.wbsoftware.somee.com" target="_blank" style="color:#5c0658">Bilgisayar Mühendisi - Welat BARAN tarafından hazırlandı. Kişisel Web Sayfam : wbsoftware.somee.com</a></p>
                </div>
            </div>
            <!-- / footer -->
        </section>
        <!--main content end-->
    </section>
    <script src="~/Content/web/js/bootstrap.js"></script>
    <script src="~/Content/web/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/Content/web/js/scripts.js"></script>
    <script src="~/Content/web/js/jquery.slimscroll.js"></script>
    <script src="~/Content/web/js/jquery.nicescroll.js"></script>
    <!--[if lte IE 8]><script language="javascript" type="text/javascript" src="js/flot-chart/excanvas.min.js"></script><![endif]-->
    <script src="~/Content/web/js/jquery.scrollTo.js"></script>
    <!-- morris JavaScript -->
    <script>
        $(document).ready(function () {
            //BOX BUTTON SHOW AND CLOSE
            jQuery('.small-graph-box').hover(function () {
                jQuery(this).find('.box-button').fadeIn('fast');
            }, function () {
                jQuery(this).find('.box-button').fadeOut('fast');
            });
            jQuery('.small-graph-box .box-close').click(function () {
                jQuery(this).closest('.small-graph-box').fadeOut(200);
                return false;
            });

            //CHARTS
            function gd(year, day, month) {
                return new Date(year, month - 1, day).getTime();
            }

            graphArea2 = Morris.Area({
                element: 'hero-area',
                padding: 10,
                behaveLikeLine: true,
                gridEnabled: false,
                gridLineColor: '#dddddd',
                axes: true,
                resize: true,
                smooth: true,
                pointSize: 0,
                lineWidth: 0,
                fillOpacity: 0.85,
                data: [
                    { period: '2015 Q1', iphone: 2668, ipad: null, itouch: 2649 },
                    { period: '2015 Q2', iphone: 15780, ipad: 13799, itouch: 12051 },
                    { period: '2015 Q3', iphone: 12920, ipad: 10975, itouch: 9910 },
                    { period: '2015 Q4', iphone: 8770, ipad: 6600, itouch: 6695 },
                    { period: '2016 Q1', iphone: 10820, ipad: 10924, itouch: 12300 },
                    { period: '2016 Q2', iphone: 9680, ipad: 9010, itouch: 7891 },
                    { period: '2016 Q3', iphone: 4830, ipad: 3805, itouch: 1598 },
                    { period: '2016 Q4', iphone: 15083, ipad: 8977, itouch: 5185 },
                    { period: '2017 Q1', iphone: 10697, ipad: 4470, itouch: 2038 },

                ],
                lineColors: ['#eb6f6f', '#926383', '#eb6f6f'],
                xkey: 'period',
                redraw: true,
                ykeys: ['iphone', 'ipad', 'itouch'],
                labels: ['All Visitors', 'Returning Visitors', 'Unique Visitors'],
                pointSize: 2,
                hideHover: 'auto',
                resize: true
            });


        });
    </script>
    <!-- calendar -->
    <script type="text/javascript" src="~/Content/web/js/monthly.js"></script>
    <script type="text/javascript">
        $(window).load(function () {

            $('#mycalendar').monthly({
                mode: 'event',

            });

            $('#mycalendar2').monthly({
                mode: 'picker',
                target: '#mytarget',
                setWidth: '250px',
                startHidden: true,
                showTrigger: '#mytarget',
                stylePast: true,
                disablePast: true
            });

            switch (window.location.protocol) {
                case 'http:':
                case 'https:':
                    // running on a server, should be good.
                    break;
                case 'file:':
                    alert('Just a heads-up, events will not work when run locally.');
            }

        });
    </script>
    <!-- //calendar -->
</body>
</html>