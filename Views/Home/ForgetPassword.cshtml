@model MvcKutuphane.Models.Model.Kullanici
@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
    <title>Şifremi Unuttum| @ViewBag.KimlikInfo.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="@ViewBag.KimlikInfo.Keywords" />
    <meta name="description" content="@ViewBag.KimlikInfo.Description" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- bootstrap-css -->
    <link rel="stylesheet" href="~/Content/web/css/bootstrap.min.css">
    <!-- //bootstrap-css -->
    <!-- Custom CSS -->
    <link href="~/Content/web/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/Content/web/css/style-responsive.css" rel="stylesheet" />
    <!-- font CSS -->
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <!-- font-awesome icons -->
    <link rel="stylesheet" href="~/Content/web/css/font.css" type="text/css" />
    <link href="~/Content/web/css/font-awesome.css" rel="stylesheet">
    <!-- //font-awesome icons -->
    <script src="~/Content/web/js/jquery2.0.3.min.js"></script>
</head>
<body>
    @using (Html.BeginForm("ForgetPassword", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="reg-w3">
            <div class="w3layouts-main">
                <h2>Yeni Şifre Alma</h2>
                <form>
                    <label>Email</label>
                    <input type="text" class="ggg" name="Email" placeholder="Email giriniz.." required="">
                    <h4>@ViewBag.Uyari</h4>
                    <div class="clearfix"></div>
                    <input type="submit" value="Şifre Gönder" name="register">
                </form>
                <a href="/Home/Login">Kütüphane Sistemi Giriş Paneli</a>
            </div>
        </div>
    }
    <script src="~/Content/web/js/bootstrap.js"></script>
    <script src="~/Content/web/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/Content/web/js/scripts.js"></script>
    <script src="~/Content/web/js/jquery.slimscroll.js"></script>
    <script src="~/Content/web/js/jquery.nicescroll.js"></script>
    <!--[if lte IE 8]><script language="javascript" type="text/javascript" src="js/flot-chart/excanvas.min.js"></script><![endif]-->
    <script src="~/Content/web/js/jquery.scrollTo.js"></script>
</body>
    </html>
