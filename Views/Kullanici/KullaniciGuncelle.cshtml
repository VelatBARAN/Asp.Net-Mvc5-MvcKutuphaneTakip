@model MvcKutuphane.Models.Model.Kullanici
@{
    ViewBag.Title = "KullaniciGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-top:40px;">Kullanıcı Güncelleme Sayfası</h2>

@using (Html.BeginForm("KullaniciGuncelle", "Kullanici", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-group" style="margin-top:40px">
    <label>Ad</label>
    <input type="text" name="Ad" required class="form-control" value="@Model.Ad" />
    <br />
    <label>Soyad</label>
    <input type="text" name="Soyad" required class="form-control" value="@Model.Soyad" />
    <br />
    <label>Email</label>
    <input type="email" name="Email" required class="form-control" value="@Model.Email" />
    <br />
    <label>Şifre</label>
    <input type="password" name="Sifre" required class="form-control" value="@Model.Sifre" />
    <br />
    <label>Yetki</label>
    @Html.DropDownList("YetkiId", null, htmlAttributes: new { @class = "form-control"})
    <br />
    <label>Eski Resim</label>
    <img src="@Model.ResimURL" width="120" height="120" />
    <br />
    <label>Resim</label>
    <input type="file" name="ResimURL" class="form-control" />
    <br />
    <button type="submit" class="btn btn-default">Güncelle</button>
    <a class="btn btn-danger" href="/Kullanici/Index">İptal</a>
</div>
}

