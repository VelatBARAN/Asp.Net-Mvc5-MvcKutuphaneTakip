@model MvcKutuphane.Models.Model.Kullanici
@{
    ViewBag.Title = "KullaniciSifreDegistir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("KullaniciSifreDegistir", "Kullanici", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group" style="margin-top:50px">
        <label>Email</label>
        <input type="email" name="Email" value="@Session["email"]" readonly hidden class="form-control" />
        <br />
        <label>Yeni Şifre Gir</label>
        <input type="password" class="form-control" required name="Sifre"/>
        <strong class="alert" style="color:red">@ViewBag.Uyari</strong>
        <br />
        <button type="submit" class="btn btn-default">Değiştir</button>
        <a class="btn btn-danger" href="/Home/Index">İptal</a>
    </div>

}

