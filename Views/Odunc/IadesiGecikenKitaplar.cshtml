@model IEnumerable<MvcKutuphane.Models.Model.Islem>
@{
    Layout = null;
}

<div class="col-md-6 stats-info stats-last widget-shadow">
    <div class="stats-last-agile">
        <strong style="color:#981e69">İadesi Geciken Kitaplardan Bazıları</strong>
        <div align="right"><a href="/Odunc/IadesiGecikenTumKitaplar" class="btn btn-default">Hepsini Gör</a></div>
        <table class="table stats-table ">
            <thead>
                <tr>
                    <th>KitapNo</th>
                    <th>Kitap Adı</th>
                    <th>ÜyeNo</th>
                    <th>Veriliş Tarihi</th>
                    <th>İade Tarihi</th>
                </tr>
            </thead>
            <tbody>

                @{
                    int say = 0;
                    foreach (var item in Model)
                    {
                        say = say + 1;
                        if (say <= 10)
                        {
                                <tr>
                                    <th scope="row" style="font-size:15px"> @item.Kitaplar.KitapId</th>
                                    <td style="font-size:15px"> @item.Kitaplar.Ad </td>
                                    <td style="font-size:15px"> @item.Uye.UyeId </td>
                                    <td style="font-size:15px"><span class="label label-info">@item.VerilisTarihi.ToShortDateString()</span></td>
                                    <td style="font-size:15px"><span class="label label-danger">@item.IadeTarihi.ToShortDateString()<i class="fa fa-level-down"></i></span></td>
                                </tr>

                        }
                    }
                }

            </tbody>
        </table>
    </div>
</div>
